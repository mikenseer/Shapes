	void OnTouchDown() {
		buttonCount = vars.buttonCount;
		winningButtonCount = vars.winningButtonCount;

		vars.buttonCount++;		

		st.cargoBay = new int[5];
				
		//timer.time = Mathf.Clamp(timer.time + timeToAdd, 0f, 30f);
		//CancelInvoke("DeactivateThis");
		gameObject.SetActive (false);
		
	}
	
