	private int winningButtonCount;
	
	void Start(){
		
		gameObject.SetActive(false);
		
	}
	
	void OnActive(){
		
		//deactivate button very quickly after active.
		//Invoke("DeactivateThis", .75f);
		
	}
	
	
	//	void DeactivateThis(){
	
