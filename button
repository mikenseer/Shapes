using UnityEngine;
using System.Collections;

public class Button : MonoBehaviour {
	
	public Timer timer;
	public float timeToAdd;
	
	void Start(){
	
		gameObject.SetActive(false);
	
	}
	
	void OnActive(){
		
		//deactivate button very quickly after active.
		//Invoke("DeactivateThis", .75f);
		
	}
	
	
//	void DeactivateThis(){
	
//		gameObject.SetActive(false);
	
//	}
	
	void OnTouchDown() {
		
		timer.time = Mathf.Clamp(timer.time + timeToAdd, 0f, 30f);
		//CancelInvoke("DeactivateThis");
		gameObject.SetActive (false);
		
	}
	
	//void OnTouchUp() {}
	
	//void OnTouchStay() {}
	
	//void OnTouchExit() {}
	
}
